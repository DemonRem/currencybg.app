<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:spinnerMode">dropdown</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="FontNavTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontListHeader" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FontListHeaderRate" parent="FontListHeader">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontListCode" parent="@android:style/TextAppearance">
        <item name="android:textColor">#D3D3D3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontListName" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FontListSource" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00BFFF</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="FontList" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontInfosKey" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/infos_key</item>
    </style>

    <style name="FontInfosValue" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/infos_value</item>
    </style>

    <style name="FontListRatioRate" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontListRateDecimals" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="FontStyleConvertHint" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontStyleConvert" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#D3D3D3</item>
    </style>

    <style name="FontStyle3rdTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/infos_key</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle3rdLibTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/infos_key</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyle3rdLibContent" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/infos_value</item>
    </style>

</resources>
