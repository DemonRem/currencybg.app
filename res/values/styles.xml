<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDark" parent="AppBaseTheme">
    </style>

    <style name="AppThemeLight" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- MaterialDrawer specific values -->
        <!--<item name="material_drawer_background">#515252</item>-->
        <!--<item name="material_drawer_primary_text">@color/material_drawer_dark_primary_text</item>-->
        <!--<item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text</item>-->
        <!--<item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>-->
        <!--<item name="material_drawer_divider">@color/material_drawer_dark_divider</item>-->
        <!--<item name="material_drawer_selected">@color/material_drawer_dark_selected</item>-->
        <!--<item name="material_drawer_selected_text">#F1433C</item>-->
        <!--<item name="material_drawer_header_selection_text">@color/material_drawer_dark_primary_text</item>-->
    </style>

    <style name="FontListCode" parent="@android:style/TextAppearance">
        <item name="android:textColor">#D3D3D3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontList" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontListRatioRate" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontListRateDecimals" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="FontStyleConvertHint" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontStyleConvert" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#D3D3D3</item>
    </style>

</resources>
